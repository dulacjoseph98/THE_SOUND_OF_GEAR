<div class="container">
  <div class="row justify-content-center">
    <div class="">
    <h1>Add a device</h1>
      <%= simple_form_for(@device) do |f| %>
      <%= f.input :name, label: "Device name :" %>
      <%= f.input :address %>
      <%= f.input :photo, as: :file %>
      <%= f.input :description %>
      <%= p "Category :" %>
      <%= f.select :category, ['Choose a category', 'Soundcard', 'Synthesizer', 'Microphone', 'Speakers']%>
      <br>
      <br>
      <%= f.submit class: "btn btn-primary" %> | <%= link_to 'Back', devices_path, class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
