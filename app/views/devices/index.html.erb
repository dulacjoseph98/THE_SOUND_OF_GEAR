<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>All the Devices</h1>
      <div class="cards">
      <ul class= "flexy" id="otis"><% @devices.each do |device| %>
       <li><%= link_to device.name, device_path(device) %></li>
       <% end %>
      </ul>
      </div>
      <% if policy(Device).create? %>
        <%= link_to "Add a device", new_device_path, class: 'btn btn-primary' %>
      <% end %>
      <%#= link_to "Add a reservation", new_device_reservation_path(device), class: 'btn btn-primary' %>
    </div>
    <div class="col-9">
      <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
</div>
