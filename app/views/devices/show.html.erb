<div class="container">
  <div class="resa-card">
    <div class="card-flex">
    <div class="">
    <% if policy(Device).create? %>
        <h2 id="title"><%= @device.name %></h2>
        <p><%= @device.address %></p>
        <h4>Description :</h4>
        <p><%= @device.description.gsub(",", "<br>").html_safe %></p>
        <hr>
        <% if @device.photo.attached? %>
          <%= cl_image_tag @device.photo.key, height: 300, crop: :fill, class: "img" %>
        <% end %>
      <% end %>
    </div>
      <div class="form">
      <%= form_for :reservation, url: device_reservations_path(@device.id), method: :post do |f| %>
        <%= f.date_field :start_date, placeholder: "Start Date" , class: "form-date" %>
        <br>
        <%= f.date_field :end_date, placeholder: "End Date", class: "form-date" %>
        <br>
        <%= button_tag( :class => "button") do %>
          Book <%= @device.name %> ! <i class="far fa-calendar-check"></i>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>

