<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <% if policy(Device).create? %>
        <h1><%= @device.name %></h2>
        <p><%= @device.address %></p>
        <hr>
        <% if @device.photo.attached? %>
          <%= cl_image_tag @device.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <p><%= @device.description %></p>
        <hr>
        <%= link_to 'Back', devices_path, class: "btn btn-primary" %> |
        <% if policy(@device).destroy? %>
          <%= link_to "Remove",
                    device_path(@device),
                    method: :delete,
                    data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
        <% end %>
        <hr>
      <% end %>

      <% if @device.user != current_user %>
        <%= form_for :reservation, url: device_reservations_path(@device.id), method: :post do |f| %>
          <%= f.date_field :start_date, placeholder: "Start Date" %>
          <span></span>
          <%= f.date_field :end_date, placeholder: "End Date"%>
          <span></span>
          <%= f.submit do %><i class="far fa-calendar-check"></i><% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
