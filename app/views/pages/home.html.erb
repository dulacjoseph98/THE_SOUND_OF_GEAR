<h3 id="rent">Rent your musical devices locally</h3>


<div class="search-bar">
  <%= form_tag devices_path, method: :get do %>
    <%= text_field_tag :name, params[:name], placeholder: 'Product name' %>
    <span></span>
    <%= text_field_tag :address, params[:address], placeholder: 'Address' %>
    <span></span>
    <%= select_tag :category, options_for_select(Device::CATEGORIES), prompt: "Category", class: "dropd" %>
    <span></span>
    <%= button_tag type: :submit, class: "search-icon" do %><i class="fas fa-search-location"></i><% end %>
  <% end %>
</div>

